{
  "name": "@lyv/depwatch",
  "version": "0.1.7",
  "keywords": ["node_modules", "pods", "dependencies", "libs"],
  "description": "Detects dependency changes so you know when you need to restore them",
  "repository": {
    "type": "git",
    "url": "https://github.com/rpenfold/dep-watch"
  },
  "main": "index.js",
  "scripts": {
    "gitignore": "node ./index gitignore",
    "check": "node ./index check -u",
    "update": "node ./index update -a"
  },
  "author": "Ryan Penfold",
  "license": "MIT",
  "dependencies": {
    "colors": "1.4.0",
    "command-line-args": "5.1.1"
  },
  "bin": {
    "depwatch": "./index.js"
  },
  "preferGlobal": true,
  "depwatch": {
    "cacheFile": "./cache/depwatch.cache.json",
    "checkNode": true,
    "restore": true
  }
}
